<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        
        Title="Snake" Height="450" Width="900">
    <Viewbox Stretch="Fill">
        <Canvas Name="GameBoard" Width="90" Height="51" Background="Black" KeyDown="GameBoard_KeyDown" Focusable="True" FocusVisualStyle="{x:Null}">
            <StackPanel>
                <TextBlock  FontSize="1.5" Name="ScoreBoard" Text="{DynamicResource ResourceKey=MyScore}" Foreground="Pink"/>
                <TextBlock  FontSize="1.5" Name="HighScore" Text="{DynamicResource ResourceKey=HighScore}" HorizontalAlignment="Right" VerticalAlignment="Bottom" Foreground="Pink"/>
            </StackPanel>
            
        </Canvas>
    </Viewbox>
</Window>